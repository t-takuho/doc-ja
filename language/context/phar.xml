<refentry xml:id="context.phar" xmlns="http://docbook.org/ns/docbook" xmlns:xlink="http://www.w3.org/1999/xlink" annotations="verify_info:false" role="stream_context_option">
 <refnamediv>
  <refname>Phar コンテキストオプション</refname>
  <refpurpose>Phar コンテキストオプション一覧</refpurpose>
 </refnamediv>
 
 <refsect1 role="description">
  &reftitle.description;
  <para>
   <literal>phar://</literal> ラッパーのコンテキストオプションです。
  </para>
 </refsect1>

 <refsect1 role="options"><!-- {{{ -->
  &reftitle.options;
  <para>
   <variablelist>
    <varlistentry xml:id="context.phar.compress">
     <term>
      <parameter>compress</parameter>
      <type>int</type>
     </term>
     <listitem>
      <para>
       <link linkend="phar.constants.compression">Phar 圧縮定数</link>
       のいずれか。
      </para>
     </listitem>
    </varlistentry>
    <varlistentry xml:id="context.phar.metadata">
     <term>
      <parameter>metadata</parameter>
      <type>mixed</type>
     </term>
     <listitem>
      <para>
       Phar メタデータ。<function>Phar::setMetadata</function> を参照ください。
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1><!-- }}} -->
 
 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><xref linkend="wrappers.phar" /></member>
    <member><link linkend="phar.using.stream">Phar ストリームラッパー</link></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>
 
